package com.example.spring_boot_portfolio_assignment.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;

@Controller
public class AppController {
	 @GetMapping("/about")
	    public String aboutMePage() {
	        return "aboutme"; // This will map to /templates/home.html
	    }
	    @GetMapping("/contact")
	    public String contactPage() {
	        return "contact"; // Resolves to /templates/test.html
	    }
	    @GetMapping("/education")
	    public String educationPage() {
	        return "education"; // This will map to /templates/home.html
	    }
	    @GetMapping("/skills")
	    public String skillsPage() {
	        return "skills"; // Resolves to /templates/test.html
	    }
}
